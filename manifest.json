{
  "manifest_version": 3,
  "name": "CSRF Defender",
  "version": "1.3.0",
  "description": "Виявлення та попередження про міжсайтові підробки запитів (CSRF)",

  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["page_inject.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
