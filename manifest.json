{
  "manifest_version": 3,
  "name": "CSRF Detector",
  "version": "1.0",
  "description": "Detect & block CSRF attacks",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
